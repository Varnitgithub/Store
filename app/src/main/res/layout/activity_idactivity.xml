<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".idactivity"
        android:background="@drawable/img_8"
        android:orientation="vertical">

        <EditText
            android:id="@+id/idForUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_id"
            android:layout_margin="40dp"
            android:minHeight="50dp" />

        <Button
            android:id="@+id/newUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update"
            android:gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>


        <LinearLayout
            android:layout_marginTop="30dp"
            android:id="@+id/linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <LinearLayout
                android:id="@+id/LL1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/getid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Headline"
                    tools:text="1"
                    android:textColor="#5B2C6F"
                    android:layout_weight="0.1" />

                <TextView
                    android:id="@+id/getcategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Headline"
                    tools:text="men's clothing"
                    android:textColor="#5B2C6F"
                    android:textSize="25dp"
                    android:layout_weight="2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/getnewimageofget"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    tools:src="@drawable/img"
                    android:background="#FBFCFC"
                    android:contentDescription="TODO"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="18dp"
                    tools:src="@drawable/img_1" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    tools:src="@drawable/baseline_expand_more_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="295"
                    android:textStyle="italic" />

            </LinearLayout>


            <TextView
                android:id="@+id/gettitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:textSize="24dp"
                android:textStyle="italic"
                android:gravity="center"
                android:textColor="#5B2C6F"
                tools:text="Fjallraven - Foldsack No. 1 Backpack, Fits 15 Laptops" />


            <LinearLayout
                android:id="@id/LL2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/getimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:src="@drawable/baseline_currency_rupee_24"
                    android:layout_marginStart="22dp" />

                <TextView
                    android:id="@+id/getprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Headline"
                    tools:text="109.95"
                    android:textStyle="italic"
                    android:textColor="#5B2C6F"
                    android:textSize="35dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/getdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                tools:text="Your perfect pack for everyday use and walks in the forest. Stash your laptop (up to 15 inches) in the padded sleeve, your everyday"
                android:maxLines="2"
                android:textColor="#5B2C6F "
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>
</layout>
